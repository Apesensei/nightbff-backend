{
  "name": "nightbff-backend",
  "version": "0.1.0",
  "description": "Backend services for NightBFF nightlife social platform",
  "main": "dist/src/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "validate-env": "node scripts/validate-env.js",
    "env:lint": "node scripts/validate-env.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:db": "docker compose -f ../docker-compose.local.yml down --remove-orphans && docker compose -f ../docker-compose.local.yml up -d",
    "typeorm": "typeorm-ts-node-commonjs -d src/data-source.cli.ts",
    "migration:create": "npm run typeorm migration:create src/database/migrations/schema/$npm_config_name",
    "migration:generate": "npm run typeorm migration:generate src/database/migrations/schema/$npm_config_name",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show",
    "migration:validate": "npm run build --silent && node dist/src/database/utils/migration-validator.js",
    "migration:validate:compiled": "node dist/src/database/utils/migration-validator.js",
    "migration:run:compiled": "node dist/scripts/migrate.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run migration:run",
    "db:create": "createdb $npm_config_name || echo 'Database exists'",
    "db:drop": "dropdb $npm_config_name || echo 'Database does not exist'",
    "seed:run": "ts-node src/database/seeds/$NODE_ENV/index.ts",
    "seed:dev": "NODE_ENV=development npm run seed:run",
    "seed:smoke:compiled": "node dist/scripts/seed-smoke.js",
    "postinstall": "npm run validate-env && bash scripts/setup-hooks.sh",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:seed": "node dist/scripts/run-seeder.js",
    "ci:guard:seeds": "bash scripts/ci/no-rogue-seeds.sh"
  },
  "keywords": [
    "nightlife",
    "social",
    "platform",
    "nestjs",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "overrides": {
    "@nestjs/cache-manager": {
      "cache-manager": "$cache-manager"
    },
    "@nestjs/config": {
      "@nestjs/common": "^11.1.0"
    },
    "@nestjs/schedule": {
      "@nestjs/common": "^11.1.0",
      "@nestjs/core": "^11.1.0"
    },
    "@nestjs/swagger": {
      "@nestjs/common": "^11.1.0",
      "@nestjs/core": "^11.1.0"
    },
    "@nestjs/testing": {
      "@nestjs/common": "^11.1.0",
      "@nestjs/core": "^11.1.0",
      "@nestjs/microservices": "^11.1.0",
      "@nestjs/platform-express": "^11.1.0"
    },
    "nestjs-cls": {
      "@nestjs/common": "^11.1.0",
      "@nestjs/core": "^11.1.0"
    }
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@keyv/redis": "^2.8.5",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/microservices": "^11.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/platform-socket.io": "^11.1.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.0",
    "@supabase/supabase-js": "^2.0.0",
    "@types/compression": "^1.8.0",
    "@types/ioredis": "^4.28.10",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.8.4",
